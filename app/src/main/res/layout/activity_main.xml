<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.example.tuo.thumbsview.view.ThumbsView
        android:id="@+id/thumbsView1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_rect"
        app:tv_change_mode="all"
        app:tv_count="1031"
        app:tv_step="34" />

    <com.example.tuo.thumbsview.view.ThumbsView
        android:id="@+id/thumbsView2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_rect"
        app:tv_change_mode="all"
        app:tv_count="998" />


    <com.example.tuo.thumbsview.view.ThumbsView
        android:id="@+id/thumbsView3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_rect"
        app:tv_change_mode="part"
        app:tv_count="998" />

    <com.example.tuo.thumbsview.view.ThumbsView
        android:id="@+id/thumbsView4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_rect"
        app:tv_change_mode="part"
        app:tv_changed_text_color="@color/colorPrimary"
        app:tv_count="998"
        app:tv_no_change_text_color="@color/colorAccent" />


    <com.example.tuo.thumbsview.view.ThumbsView
        android:id="@+id/thumbsView5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_rect"
        app:tv_change_mode="part"
        app:tv_changed_text_color="@color/colorPrimary"
        app:tv_count="998"
        app:tv_no_change_text_color="@color/colorAccent"
        app:tv_text_space="30" />


    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="click" />

</LinearLayout>
